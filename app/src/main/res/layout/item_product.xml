<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/six_m"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="200dp"
                android:layout_marginStart="@dimen/v_margin"
                android:layout_marginEnd="@dimen/v_margin"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/example_product"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/six_m"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginEnd="@dimen/v_margin"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:text="@string/rp_20"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/six_m"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/v_margin"
                android:background="@drawable/baseline_access_time_24"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="100dp"
                android:layout_marginStart="@dimen/v_margin"
                android:layout_marginEnd="@dimen/v_margin"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:text="@string/waktu"/>
            <TextView
                android:id="@+id/tv_qty_desc"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/six_m"
                android:layout_marginEnd="@dimen/v_margin"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:text="@string/perKg"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/six_m"
            android:layout_marginBottom="@dimen/six_m"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/v_margin"
                android:background="@drawable/baseline_auto_awesome_motion_24"/>
            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/v_margin"
                android:layout_marginEnd="@dimen/v_margin"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:text="@string/no_min_buy"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
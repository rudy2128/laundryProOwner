<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m_six"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/v_margin"
                android:contentDescription="@string/app_name"
                android:src="@drawable/baseline_people_blue_24"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/v_margin"
                android:layout_marginEnd="@dimen/v_margin"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/name"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/v_margin"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/v_margin"
                android:contentDescription="@string/app_name"
                android:src="@drawable/baseline_local_phone_24"/>
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/v_margin"
                android:layout_marginEnd="@dimen/v_margin"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/phone"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/v_margin"
            android:layout_marginBottom="@dimen/m_six"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/v_margin"
                android:contentDescription="@string/app_name"
                android:src="@drawable/baseline_co_present_24"/>
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/v_margin"
                android:layout_marginEnd="@dimen/m_six"
                android:layout_height="wrap_content"
                android:text="@string/employee"/>
            <TextView
                android:id="@+id/tv_code_outlet"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/m_six"
                android:layout_marginEnd="@dimen/v_margin"
                android:layout_height="wrap_content"
                android:text="@string/outlet"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>